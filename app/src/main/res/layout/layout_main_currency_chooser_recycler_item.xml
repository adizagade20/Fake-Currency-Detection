<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_currency_chooser_item_root_layout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:layout_margin="4dp">

	<ImageView
		android:id="@+id/main_currency_chooser_item_image_view"
		android:layout_width="150dp"
		android:layout_height="75dp"
		android:layout_marginHorizontal="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toLeftOf="@id/main_currency_chooser_item_text_view"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@mipmap/ic_launcher" />

	<TextView
		android:id="@+id/main_currency_chooser_item_text_view"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:paddingHorizontal="8dp"
		android:textColor="@color/design_default_color_on_secondary"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/main_currency_chooser_item_image_view"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Rs. 100 new" />

</androidx.constraintlayout.widget.ConstraintLayout>